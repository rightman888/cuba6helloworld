<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.cubasix.web.screens.customer.CustomerBrowse"
        focusComponent="customersTable"
        lookupComponent="customersTable"
        messagesPack="com.company.cubasix.web.screens.customer">
    <dsContext>
        <groupDatasource id="customersDs"
                         class="com.company.cubasix.entity.Customer"
                         view="customer-view">
            <query>
                <![CDATA[select e from cubasix$Customer e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="customersTable"
            spacing="true">
        <filter id="filter"
                applyTo="customersTable"
                datasource="customersDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="customersTable"
                    width="100%">
            <actions>
                <action id="create"
                        openType="NEW_TAB"/>
                <action id="edit"
                        openType="NEW_TAB"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="middleName"/>
                <column id="lastName"/>
                <column id="phoneNumber"/>
            </columns>
            <rows datasource="customersDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="customersTable.create"/>
                <button id="editBtn" action="customersTable.edit"/>
                <button id="removeBtn" action="customersTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
